{
  "name": "chokepidgin",
  "version": "1.0.0",
  "description": "ChokePidgin.com - Learn Hawaiian Pidgin English",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "./scripts/dev-server.sh",
    "build": "npm run build:css && node build.js",
    "build:css": "vite build",
    "watch:css": "vite build --watch",
    "deploy": "./scripts/deploy.sh",
    "data:consolidate": "node tools/data/consolidate-data.js",
    "data:rebuild": "npm run data:consolidate && npm run build",
    "test": "node tools/testing/run-validation.js",
    "test:translator": "node tools/testing/validate-phase-2-3.js",
    "generate:sitemap": "node tools/generators/generate-sitemap.js",
    "generate:pages": "node tools/generators/generate-entry-pages.js",
    "validate": "npm run test",
    "migrate:supabase": "node tools/migrate-to-supabase.js"
  },
  "keywords": [
    "pidgin",
    "hawaiian",
    "language",
    "learning",
    "translator"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google-cloud/translate": "^9.3.0",
    "@supabase/supabase-js": "^2.86.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.0",
    "helmet": "^7.0.0",
    "node-fetch": "^2.7.0"
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.17",
    "tailwindcss": "^4.1.17",
    "vite": "^7.2.4"
  }
}
